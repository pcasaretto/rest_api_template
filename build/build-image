#!/bin/bash

env=$1
app="API_NAME_HERE"

if [[ "$env" == "" ]]; then
  env="dev"
fi

echo "Build '$app' '$env' image"
cd $(dirname "$0")

# Get current dir
current_dir="$(pwd)"

echo "Go to root folder"
cd $current_dir/..

echo "Build docker image"
docker build -t "resultadosdigitais/$app-$env:alpha" -f build/$env/Dockerfile .
